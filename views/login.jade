doctype html
html
    head
        title live-room-waterfall
        meta(name="viewport",content="width=device-width,initial-scale=1.0,user-scalable=no")
        link(rel='stylesheet', href='//static.daidai2u.com/stylesheets/all.css')
        style.
            .back_to_add{
                position:fixed;
                right:0;
                top:0;
            }
    body
        form#form(action="/we_account/loginService#{fromapp}" method="post" onsubmit="return loginSubmit();")
            .form-control
                input#username.required(type="text" name="username" placeholder="代go号:是那一串数字哦")
                span.error-tip(style="color: red;")
            .form-control
                input#pwd.required(type="password" name="pwd" placeholder="密码")
                span.error-tip
            .eform-control.login-fail #{error}
            .eform-control
                label
                    input#rememberpwd(name="remember-pwd" type="checkbox" value="")
                    span 记住密码
                label
                    a(href="/forgetpwd.html") 忘记密码
            input#loginBtn(type="submit" class="" value="登录")
            a#registerBtn(href="/register.html") 注册
    script(src="//static.daidai2u.com/javascripts/jquery.js")
    script(src="//static.daidai2u.com/util/util.js")
    script(src="//static.daidai2u.com/javascripts/login/login.js")