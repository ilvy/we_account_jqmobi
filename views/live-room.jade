doctype html
html
    head
        title live-room-waterfall
        meta(name="viewport",content="width=device-width,initial-scale=1.0,user-scalable=no")
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        style.
            .back_to_add{
                position:fixed;
                right:0;
                top:0;
            }
    body
        div#tools-btn
            div
            div
            div
        div#tools-panel
            - if (publisher)
                div.myLiveRoom 我的直播间
                div.addProduct
                    a(href='/publish.html') 发布
                div.myFavorite 我的收藏
            -else
                div.myLiveRoom 我的直播间
                div.changeRoom
                    a(href="/we_account/room_door")切换房间
                div.favorite 收藏一下
                div.myFavorite 我的收藏

        //div#ls-load
        //    button( onclick="load()")加载
        - if (products.length)
            section.waterfall
                each product in products
                    div.box
                        div(data-desc='#{product.text}').desc #{product.text}
                        div(data-imgnum='#{product.image_url.length}').img-display
                            each imageName,i in product.image_url
                                img(src='http://120.24.224.144/images/#{imageName}' data-num='#{i}')
                        div.ontact-saler
                            联系卖家

        div(role="dialog" aria-hidden="true" data-backdrop="static")#popup.modal.fade
            div(data-toggle="modal" data-target="#popup")#popup-close
                span ×
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button(type="button" class="close" data-dismiss="modal")
                            span(aria-hidden="true") x
                            span.sr-only close
                    div.modal-body
                        div.big-img-display
